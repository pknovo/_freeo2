.Navigation__item:after {
  position: absolute;
  display: block;
  background-color: #4A89DC;
  content: '';
  height: 4px;
  width: 100%;
  left: 0;
  bottom: 0;
  transform: scale3d(0, 1, 1);
  transition: opacity 350ms cubic-bezier(0.4, 0, 0.4, 1), transform 200ms cubic-bezier(0.4, 0, 0.4, 1);
  opacity: 0;
  transform-origin: top right;
}

.Navigation__item.Navigation__item--active:after {
  transform: scale3d(1, 1, 1);
  opacity: 1;
  transform-origin: top left;
}

.Navigation__item-active {
  background-color #4A89DC;
}
